{
  "opts": {
    "destination": "hookdocs",
    "recurse": true,
    "readme": "./README.md"
  },
  "source": {
    "include": [
      "./",
      "includes"
    ],
    "includePattern": ".+\\.(php)?$"
  },
  "plugins": [
    "node_modules/wp-hookdoc/plugin",
    "plugins/markdown"
  ],
  "templates":  {
    "default": {
      "layoutFile": "./.github/hookdoc-tmpl/layout.tmpl",
      "staticFiles": {
        "include": [
          "./.github/hookdoc-tmpl/static"
        ]
      }
    }
  }
}
